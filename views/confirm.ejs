<!-- views/confirm.ejs -->
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title><%= title %></title>
</head>
<body>

<div class="container-fluid border text-center ">
    <div class="row">
        <div class="col  bg-info">
            <h1 class="text-white"><%= title %></h1>
            <p class="text-white">Your ad has been saved. Once approved by admin, it will be posted.</p>
            <p class="text-white">Your confirmation number is: <%= adId %>.</p>
            <p class="text-white">For the ad title: <%= adTitle %>.</p>
            <br>
            <a class="border p-1 rounded bg-white text-black" href="http://localhost:3000">Back to data</a>
            <br>
            <br>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>
