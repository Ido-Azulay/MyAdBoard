<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>Admin Dashboard</title>
</head>
<body>


<div class="container-fluid">
    <div class="row d-none d-sm-flex">
        <div class="col bg-info">
            <h1 class="display-5 text-center text-light"><b>Welcome <%= userName %> </b></h1>
                  <p class="text-center text-light">You are logged in!</p>
        </div>
    </div>
</div>

<hr>
<!-- Display Non-Approved Ads -->
<div class="container">
    <div class="row" id="unapprovedAds">
        <h2>Non-Approved Ads:</h2>
        <ul class="list-group">
            <% for (const ad of nonApprovedAds) { %>
                <li class="list-group-item d-flex justify-content-between align-items-center" id="nonApprovedAd-<%= ad.id %>">
                    <div>
                        <span class="fw-bold">Ad:</span> <%= ad.title %>,
                        <span class="fw-bold">Description:</span> <%= ad.description %>,
                        <span class="fw-bold">Price:</span> <%= ad.price %>
                    </div>
                    <div>
                        <button class="approve-btn btn btn-success" data-ad-id="<%= ad.id %>">Approve</button>
                        <button class="delete-btn btn btn-danger" data-ad-id="<%= ad.id %>">Delete</button>
                    </div>
                </li>
            <% } %>
        </ul>
    </div>
</div>

<hr>
<!-- Display Approved Ads -->
<div class="container">
    <div class="row" id="approvedAds">
        <h2>Approved Ads:</h2>
        <ul class="list-group">
            <% for (const ad of approvedAds) { %>
                <li class="list-group-item d-flex justify-content-between align-items-center" id="approvedAd-<%= ad.id %>">
                    <div>
                        <span class="fw-bold">Ad:</span> <%= ad.title %>,
                        <span class="fw-bold">Description:</span> <%= ad.description %>,
                        <span class="fw-bold">Price:</span> <%= ad.price %>
                    </div>
                    <button class="delete-btn btn btn-danger" data-ad-id="<%= ad.id %>">Delete</button>
                </li>
            <% } %>
        </ul>
    </div>
</div>

<br>
<br>

<!-- Log Out Button -->
<div class="container">
    <div class="row">
        <div class="col col-4">
            <a class="border link-light bg-primary p-1 rounded" href="http://localhost:3000">Home Page</a>
            <a class="border link-light bg-secondary p-1 rounded" href="/logout">Logout</a>
        </div>
    </div>
</div>

<br>
<br>

<script src="/javascripts/adminActions.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>
